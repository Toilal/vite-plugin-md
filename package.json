{
  "name": "vite-plugin-md",
  "description": "Vite plugin to render any file to a component",
  "version": "0.5.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vite-plugin-md"
  },
  "homepage": "https://github.com/antfu/vite-plugin-md",
  "bugs": "https://github.com/antfu/vite-plugin-md/issues",
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vite-plugin",
    "render",
    "templates"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "example:dev": "cp README.md example/README.md && npm -C example run dev",
    "example:build": "cp README.md example/README.md && npm -C example run build",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "prepublishOnly": "npm run build",
    "release": "git-ensure --no-behind -b main --clean && bumpp --commit --tag --push"
  },
  "peerDependencies": {
    "vite": "^2.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.4.3",
    "@antfu/ni": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@vue/compiler-sfc": "^3.0.5",
    "bumpp": "^6.0.6",
    "eslint": "^7.20.0",
    "git-ensure": "^0.0.6",
    "rollup": "^2.39.0",
    "standard-version": "^9.1.0",
    "tsup": "^3.12.1",
    "typescript": "^4.1.5",
    "vite": "^2.0.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.2"
  }
}
